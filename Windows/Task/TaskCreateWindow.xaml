<Window x:Class="StudyTracker.Windows.Task.TaskCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyTracker.Windows.Task"
        mc:Ignorable="d"
        Title="TaskCreateWindow" Height="250" Width="300"
        ResizeMode="NoResize">
    <Grid HorizontalAlignment="Center" Width="300" Height="234" VerticalAlignment="Bottom">
        <TextBox Name="Description" HorizontalAlignment="Center" Margin="0,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="29"/>
        <Button Content="Добавить задачу" Click="CreateTask" HorizontalAlignment="Center"  Margin="83,135,83,69" Width="134"/>
        <ComboBox Name="User" HorizontalAlignment="Center" Margin="0,73,0,0" VerticalAlignment="Top" Width="134"/>
        <DatePicker  Name="Deadline" Width="134"  HorizontalAlignment="Center"  Margin="83,100,83,104"  Height="30"/>

    </Grid>
</Window>
